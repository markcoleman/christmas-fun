{
    "name": "my-christmas-project",
    "version": "1.0.0",
    "type": "module",
    "description": "An unusual, software-engineer-themed telling of the night before Christmas",
    "main": "index.js",
    "scripts": {
        "build": "tsc && copyfiles story.*.json carols.json dist",
        "start": "npm run build && node dist/index.js",
        "karaoke": "npm run build && node dist/karaoke.js",
        "test": "vitest --run --coverage",
        "mcp": "node dist/src/mcp-server.js",
        "test:mcp": "npm run build && node dist/src/test-mcp.js"
    },
    "keywords": [
        "Christmas",
        "Node.js",
        "Software Engineer",
        "DevContainer"
    ],
    "author": "Your Name",
    "license": "MIT",
    "dependencies": {
        "@modelcontextprotocol/sdk": "^1.25.1",
        "chalk": "^5.6.2"
    },
    "devDependencies": {
        "@eslint/js": "^9.39.2",
        "@vitest/coverage-v8": "^3.2.4",
        "copyfiles": "^2.4.1",
        "eslint": "^9.39.2",
        "globals": "^16.5.0",
        "husky": "^9.1.7",
        "lint-staged": "^16.2.7",
        "prettier": "^3.7.4",
        "ts-node": "^10.9.2",
        "typescript": "^5.9.3",
        "vitest": "^4.0.16"
    },
    "lint-staged": {
        "*.{js,jsx,mjs,ts,tsx}": [
            "eslint --fix",
            "prettier --write"
        ],
        "*.{css,scss,html,md}": [
            "prettier --write"
        ]
    }
}
